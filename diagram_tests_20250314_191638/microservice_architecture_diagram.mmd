    "nodes": [
        {
            "id": "ui",
            "label": "User Interface",
            "type": "frontend",
            "description": "Handles user interaction and communication with the backend services.",
            "technology": "React"
        },
        {
            "id": "user-service",
            "label": "User Service",
            "type": "microservice",
            "description": "Manages user authentication, authorization, and profile information.",
